{% extends 'admin_layout.html.twig' %}

{% block content %}
    <form action="" method="post">
            <input type="hidden" name="id" value="{{ book.id }}">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" id="title" placeholder="Title" value="{{ book.title }}">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description" placeholder="Description">{{ book.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" name="price" class="form-control" id="price" placeholder="Price" value="{{ book.price }}">
        </div>
        <div class="form-group">
            <label for="is_active">Is Active</label>
            <input type="number" min="0" max="1" name="is_active" class="form-control" id="is_active" placeholder="Is Active" value="{{ book.active }}">
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <input type="text" name="category" class="form-control" id="category" placeholder="Category" value="{{ book.category }}">
        </div>
        <button class="btn btn-primary">Update</button>
    </form>


{% endblock %}
